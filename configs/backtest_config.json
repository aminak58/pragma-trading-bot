{
  "strategy": "RegimeAdaptiveStrategy",
  "strategy_path": "src/strategies",
  "timeframe": "5m",
  "dry_run": true,
  "stake_currency": "USDT",
  "stake_amount": "unlimited",
  "max_open_trades": 5,
  "tradable_balance_ratio": 0.99,
  "timerange": "20240101-20241001",
  "data_path": "user_data/data",
  "export": "trades",
  "export_filename": "backtest_results",
  "exchange": {
    "name": "binance",
    "key": "test_key",
    "secret": "test_secret",
    "ccxt_config": {},
    "ccxt_async_config": {}
  },
  "pairlists": [
    {
      "method": "StaticPairList"
    }
  ],
  "pairs": [
    "BTC/USDT",
    "ETH/USDT",
    "BNB/USDT",
    "ADA/USDT",
    "SOL/USDT"
  ],
  "edge": {
    "enabled": false
  },
  "telegram": {
    "enabled": false
  },
  "api_server": {
    "enabled": false
  },
  "bot_name": "Pragma-Backtest",
  "initial_state": "running",
  "force_entry_enable": false,
  "internals": {
    "process_throttle_secs": 5,
    "heartbeat_interval": 60
  },
  "execution": {
    "mode": "backtest",
    "safety_checks": true,
    "monitoring": false,
    "alerts": false
  },
  "risk_management": {
    "max_position_size": 0.02,
    "max_total_exposure": 0.10,
    "daily_loss_limit": 0.05,
    "max_drawdown": 0.10,
    "circuit_breakers": {
      "enabled": true,
      "max_consecutive_losses": 5,
      "volatility_threshold": 0.05
    }
  },
  "regime_detection": {
    "enabled": true,
    "n_states": 3,
    "lookback": 500,
    "retrain_interval": 15
  },
  "freqai": {
    "enabled": true,
    "model_training": {
      "enabled": true,
      "retrain_interval": 15,
      "min_training_samples": 1000
    },
    "feature_engineering": {
      "enabled": true,
      "include_regime_features": true,
      "include_technical_features": true,
      "include_volume_features": true,
      "include_statistical_features": true
    }
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "logs/backtest.log",
    "max_bytes": 10485760,
    "backup_count": 5
  }
}
