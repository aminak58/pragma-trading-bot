# Pragma Trading Bot - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# EXCHANGE CREDENTIALS
# =============================================================================
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# =============================================================================
# TELEGRAM BOT
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# =============================================================================
# API SERVER
# =============================================================================
API_USERNAME=freqtrade
API_PASSWORD=your_strong_api_password_here
JWT_SECRET_KEY=your_jwt_secret_key_here
WS_TOKEN=your_websocket_token_here

# =============================================================================
# SECURITY
# =============================================================================
ALLOWED_IPS=127.0.0.1,192.168.1.0/24
EMERGENCY_EMAIL=your_emergency_email@example.com
EMERGENCY_PHONE=+1234567890

# =============================================================================
# MONITORING & ALERTS
# =============================================================================
FRONTEND_URL=http://localhost:3000
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001

# =============================================================================
# BACKUP & STORAGE
# =============================================================================
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=sqlite:///user_data/tradesv3.sqlite
POSTGRES_URL=postgresql://user:password@localhost:5432/freqtrade

# =============================================================================
# TRADING PARAMETERS
# =============================================================================
STAKE_AMOUNT=1000
MAX_OPEN_TRADES=5
DAILY_LOSS_LIMIT=0.05
MAX_DRAWDOWN=0.10

# =============================================================================
# EXECUTION MODE
# =============================================================================
EXECUTION_MODE=live
DRY_RUN=false
SAFETY_CHECKS=true

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/pragma_bot.log
AUDIT_LOG=true

# =============================================================================
# DEVELOPMENT
# =============================================================================
DEBUG=false
TESTING=false
DEVELOPMENT=false

# =============================================================================
# FREQAI
# =============================================================================
FREQAI_ENABLED=true
MODEL_RETRAIN_INTERVAL=15
MIN_TRAINING_SAMPLES=1000

# =============================================================================
# REGIME DETECTION
# =============================================================================
REGIME_ENABLED=true
REGIME_STATES=3
REGIME_LOOKBACK=500
REGIME_RETRAIN_INTERVAL=15

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
KELLY_CRITERION_ENABLED=true
MAX_KELLY_FRACTION=0.25
DYNAMIC_STOPS_ENABLED=true
CIRCUIT_BREAKERS_ENABLED=true

# =============================================================================
# NOTIFICATIONS
# =============================================================================
NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS=false
SMS_NOTIFICATIONS=false
DISCORD_WEBHOOK_URL=

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
REDIS_URL=redis://localhost:6379
ELASTICSEARCH_URL=http://localhost:9200
KAFKA_BROKERS=localhost:9092

# =============================================================================
# CUSTOM SETTINGS
# =============================================================================
CUSTOM_STRATEGY_PATH=src/strategies
CUSTOM_INDICATORS_PATH=src/indicators
CUSTOM_DATA_PATH=user_data/data

# =============================================================================
# MAINTENANCE
# =============================================================================
MAINTENANCE_MODE=false
MAINTENANCE_SCHEDULE=02:00
MAINTENANCE_TIMEZONE=UTC

# =============================================================================
# PERFORMANCE
# =============================================================================
MAX_MEMORY_USAGE=2GB
MAX_CPU_USAGE=80
MAX_RESPONSE_TIME=1000ms

# =============================================================================
# FEATURES
# =============================================================================
MULTI_TIMEFRAME_ANALYSIS=true
CROSS_ASSET_CORRELATION=true
ADVANCED_RISK_METRICS=true
PERFORMANCE_ANALYTICS=true
