{
  "strategy": "RegimeAdaptiveStrategy",
  "strategy_path": "src/strategies",
  "timeframe": "5m",
  "dry_run": true,
  "stake_currency": "USDT",
  "stake_amount": 1000,
  "max_open_trades": 3,
  "tradable_balance_ratio": 0.99,
  "data_path": "user_data/data",
  "exchange": {
    "name": "binance",
    "key": "YOUR_API_KEY",
    "secret": "YOUR_SECRET_KEY",
    "ccxt_config": {},
    "ccxt_async_config": {}
  },
  "pairlists": [
    {
      "method": "StaticPairList"
    }
  ],
  "pairs": [
    "BTC/USDT",
    "ETH/USDT",
    "BNB/USDT"
  ],
  "edge": {
    "enabled": false
  },
  "telegram": {
    "enabled": true,
    "token": "YOUR_TELEGRAM_BOT_TOKEN",
    "chat_id": "YOUR_TELEGRAM_CHAT_ID"
  },
  "api_server": {
    "enabled": true,
    "listen_ip_address": "127.0.0.1",
    "listen_port": 8080,
    "username": "freqtrade",
    "password": "YOUR_API_PASSWORD"
  },
  "bot_name": "Pragma-DryRun",
  "initial_state": "running",
  "force_entry_enable": false,
  "internals": {
    "process_throttle_secs": 5,
    "heartbeat_interval": 60
  },
  "execution": {
    "mode": "dry-run",
    "safety_checks": true,
    "monitoring": true,
    "alerts": true
  },
  "risk_management": {
    "max_position_size": 0.02,
    "max_total_exposure": 0.10,
    "daily_loss_limit": 0.05,
    "max_drawdown": 0.10,
    "circuit_breakers": {
      "enabled": true,
      "max_consecutive_losses": 5,
      "volatility_threshold": 0.05
    }
  },
  "regime_detection": {
    "enabled": true,
    "n_states": 3,
    "lookback": 500,
    "retrain_interval": 15
  },
  "freqai": {
    "enabled": true,
    "model_training": {
      "enabled": true,
      "retrain_interval": 15,
      "min_training_samples": 1000
    },
    "feature_engineering": {
      "enabled": true,
      "include_regime_features": true,
      "include_technical_features": true,
      "include_volume_features": true,
      "include_statistical_features": true
    }
  },
  "monitoring": {
    "enabled": true,
    "metrics_interval": 300,
    "health_check_interval": 60,
    "performance_tracking": true
  },
  "alerts": {
    "enabled": true,
    "telegram": true,
    "email": false,
    "webhook": false,
    "levels": ["WARNING", "ERROR", "CRITICAL"]
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "logs/dryrun.log",
    "max_bytes": 10485760,
    "backup_count": 5
  }
}
