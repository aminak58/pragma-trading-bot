{
  "strategy": "RegimeAdaptiveStrategy",
  "strategy_path": "src/strategies",
  "timeframe": "5m",
  "dry_run": false,
  "stake_currency": "USDT",
  "stake_amount": 5000,
  "max_open_trades": 5,
  "tradable_balance_ratio": 0.95,
  "exchange": {
    "name": "binance",
    "key": "${BINANCE_API_KEY}",
    "secret": "${BINANCE_SECRET_KEY}",
    "ccxt_config": {
      "enableRateLimit": true,
      "rateLimit": 1200,
      "timeout": 30000
    },
    "ccxt_async_config": {
      "enableRateLimit": true,
      "rateLimit": 1200,
      "timeout": 30000
    }
  },
  "pairlists": [
    {
      "method": "StaticPairList"
    }
  ],
  "pairs": [
    "BTC/USDT",
    "ETH/USDT",
    "BNB/USDT",
    "ADA/USDT",
    "SOL/USDT",
    "MATIC/USDT",
    "DOT/USDT",
    "AVAX/USDT"
  ],
  "edge": {
    "enabled": false
  },
  "telegram": {
    "enabled": true,
    "token": "${TELEGRAM_BOT_TOKEN}",
    "chat_id": "${TELEGRAM_CHAT_ID}",
    "reload": true,
    "balance_dust_level": 0.01,
    "reload_interval": 60
  },
  "api_server": {
    "enabled": true,
    "listen_ip_address": "0.0.0.0",
    "listen_port": 8080,
    "username": "${API_USERNAME}",
    "password": "${API_PASSWORD}",
    "jwt_secret_key": "${JWT_SECRET_KEY}",
    "CORS_origins": ["${FRONTEND_URL}"],
    "ws_token": "${WS_TOKEN}",
    "timeout": 30
  },
  "bot_name": "Pragma-Production",
  "initial_state": "running",
  "force_entry_enable": false,
  "internals": {
    "process_throttle_secs": 5,
    "heartbeat_interval": 60,
    "max_open_trades_per_pair": 1
  },
  "execution": {
    "mode": "live",
    "confirm_live": true,
    "safety_phrase": "I_UNDERSTAND_THE_RISKS",
    "safety_checks": true,
    "monitoring": true,
    "alerts": true,
    "emergency_stop": true,
    "auto_restart": true
  },
  "risk_management": {
    "max_position_size": 0.02,
    "max_total_exposure": 0.15,
    "daily_loss_limit": 0.03,
    "max_drawdown": 0.08,
    "circuit_breakers": {
      "enabled": true,
      "max_consecutive_losses": 5,
      "volatility_threshold": 0.05,
      "emergency_stop": true,
      "cooldown_period": 3600
    },
    "kelly_criterion": {
      "enabled": true,
      "max_kelly_fraction": 0.20,
      "regime_adjustment": true,
      "confidence_threshold": 0.7
    },
    "dynamic_stops": {
      "enabled": true,
      "atr_multiplier": 2.0,
      "trailing_stop": true,
      "breakeven_protection": true,
      "time_based_stops": true
    },
    "position_sizing": {
      "enabled": true,
      "method": "kelly_criterion",
      "min_position_size": 10,
      "max_position_size": 1000
    }
  },
  "regime_detection": {
    "enabled": true,
    "n_states": 3,
    "lookback": 500,
    "retrain_interval": 15,
    "confidence_threshold": 0.7,
    "auto_retrain": true
  },
  "freqai": {
    "enabled": true,
    "model_training": {
      "enabled": true,
      "retrain_interval": 15,
      "min_training_samples": 1000,
      "auto_retrain": true,
      "model_validation": true
    },
    "feature_engineering": {
      "enabled": true,
      "include_regime_features": true,
      "include_technical_features": true,
      "include_volume_features": true,
      "include_statistical_features": true,
      "include_lagged_features": true,
      "include_cross_asset_features": true
    },
    "model_selection": {
      "enabled": true,
      "ensemble_method": "weighted_average",
      "confidence_threshold": 0.6,
      "model_switching": true
    },
    "performance_tracking": {
      "enabled": true,
      "metrics_interval": 3600,
      "model_comparison": true
    }
  },
  "monitoring": {
    "enabled": true,
    "metrics_interval": 300,
    "health_check_interval": 60,
    "performance_tracking": true,
    "real_time_dashboard": true,
    "alert_thresholds": {
      "memory_usage": 80,
      "cpu_usage": 80,
      "response_time": 1000,
      "error_rate": 5,
      "drawdown": 0.05
    },
    "external_monitoring": {
      "enabled": true,
      "prometheus": true,
      "grafana": true
    }
  },
  "alerts": {
    "enabled": true,
    "telegram": true,
    "email": true,
    "webhook": true,
    "levels": ["WARNING", "ERROR", "CRITICAL"],
    "emergency_contacts": [
      "${EMERGENCY_EMAIL}",
      "${EMERGENCY_PHONE}"
    ],
    "escalation": {
      "enabled": true,
      "levels": 3,
      "timeout": 300
    }
  },
  "security": {
    "api_key_permissions": "read_only",
    "ip_whitelist": ["${ALLOWED_IPS}"],
    "rate_limiting": true,
    "encryption": true,
    "audit_logging": true,
    "two_factor_auth": false,
    "session_timeout": 3600
  },
  "backup": {
    "enabled": true,
    "interval": "daily",
    "retention_days": 90,
    "encryption": true,
    "cloud_storage": true,
    "s3_bucket": "${BACKUP_S3_BUCKET}",
    "s3_region": "${BACKUP_S3_REGION}"
  },
  "maintenance": {
    "enabled": true,
    "schedule": "02:00",
    "timezone": "UTC",
    "tasks": [
      "model_retraining",
      "log_rotation",
      "database_cleanup",
      "backup_verification"
    ]
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "logs/production.log",
    "max_bytes": 10485760,
    "backup_count": 30,
    "audit_log": "logs/audit.log",
    "error_log": "logs/error.log",
    "performance_log": "logs/performance.log"
  },
  "environment": {
    "name": "production",
    "debug": false,
    "testing": false,
    "development": false
  }
}
